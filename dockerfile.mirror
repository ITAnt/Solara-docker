# 使用国内镜像加速
FROM docker.1ms.run/library/node:18-alpine

WORKDIR /app

# 设置 npm 镜像源
RUN npm config set registry https://registry.npmmirror.com

# 复制 package.json 并安装依赖
COPY package*.json ./
RUN npm install --production

# 复制应用文件
COPY . .

# 创建下载目录
RUN mkdir -p /download

# 设置环境变量默认值
ENV NODE_ENV=production
ENV PORT=3001
ENV DOWNLOAD_DIR=/download
ENV SOLARA_PASSWORD=Solara123

# 声明数据卷
VOLUME ["/download"]

# 暴露端口
EXPOSE 3001

# 使用 root 用户运行（确保有权限写入挂载的目录）
# 启动应用
CMD ["npm", "start"]
